<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/careerGpaTitleID"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/careerGpaTitle"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/averageGradeID"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/averageGrade"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/careerGpaID" />

        <TextView
            android:id="@+id/careerGpaID"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:text="0.0"
            android:textColor="@color/steel_blue"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/careerGpaTitleID" />

        <TextView
            android:id="@+id/semesterGpaID"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:text="0"
            android:textColor="@color/steel_blue"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/averageGradeID" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/targetGPATitle"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/targetGPAID"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="0.0"
            android:textColor="@color/steel_blue"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/appNameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/app_name"
            android:textColor="@color/steel_blue"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/firstSubjectBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"

            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/button_background"
            android:text="@string/firstSubject"
            android:textColor="@color/steel_blue"
            app:layout_constraintEnd_toStartOf="@+id/editBTN"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appNameID" />

        <Button
            android:id="@+id/secondSubjectBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/button_background"
            android:text="@string/secondSubject"
            android:textColor="@color/steel_blue"
            app:layout_constraintEnd_toStartOf="@+id/editBTN"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstSubjectBTN" />

        <Button
            android:id="@+id/thirdSubjectBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/button_background"
            android:text="@string/thirdSubject"
            android:textColor="@color/steel_blue"
            app:layout_constraintEnd_toStartOf="@+id/editBTN"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/secondSubjectBTN" />

        <Button
            android:id="@+id/fourthSubjectBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/button_background"
            android:text="@string/fourthSubject"
            android:textColor="@color/steel_blue"
            app:layout_constraintEnd_toStartOf="@+id/editBTN"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/thirdSubjectBTN" />

        <Button
            android:id="@+id/fifthSubjectBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/button_background"
            android:text="@string/fifthSubject"
            android:textColor="@color/steel_blue"
            app:layout_constraintEnd_toStartOf="@+id/editBTN"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fourthSubjectBTN" />

        <Button
            android:id="@+id/sixthSubjectBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"

            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/button_background"
            android:text="@string/sixthSubject"
            android:textColor="@color/steel_blue"
            app:layout_constraintEnd_toStartOf="@+id/editBTN"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fifthSubjectBTN" />

        <TextView
            android:id="@+id/firstSubGradeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="TextView"
            android:textColor="@color/steel_blue"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/firstSubjectBTN"
            app:layout_constraintTop_toBottomOf="@+id/appNameID" />

        <TextView
            android:id="@+id/secondSubGradeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="TextView"
            android:textColor="@color/steel_blue"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/secondSubjectBTN"
            app:layout_constraintTop_toBottomOf="@+id/firstSubjectBTN" />

        <TextView
            android:id="@+id/thirdSubGradeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="TextView"
            android:textColor="@color/steel_blue"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/thirdSubjectBTN"
            app:layout_constraintTop_toBottomOf="@+id/secondSubjectBTN" />

        <TextView
            android:id="@+id/fourSubGradeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="TextView"
            android:textColor="@color/steel_blue"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/fourthSubjectBTN"
            app:layout_constraintTop_toBottomOf="@+id/thirdSubjectBTN" />

        <TextView
            android:id="@+id/fifthSubGradeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="TextView"
            android:textColor="@color/steel_blue"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/fifthSubjectBTN"
            app:layout_constraintTop_toBottomOf="@+id/fourthSubjectBTN" />

        <TextView
            android:id="@+id/sixthSubGradeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="TextView"
            android:textColor="@color/steel_blue"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/sixthSubjectBTN"
            app:layout_constraintTop_toBottomOf="@+id/fifthSubjectBTN" />

        <Button
            android:id="@+id/editBTN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_background"
            android:text="@string/editSubject"
            android:textColor="@color/steel_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>